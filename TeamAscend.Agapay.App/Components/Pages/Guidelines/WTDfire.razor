@using TeamAscend.Agapay.App.Components.Layout
@layout BaseLayout
@page "/WTDfire"

<div class="safety-guide">

    <header class="header-fire">
        <div class="header-overlay">
            <a asp-action="Index" href="/" class="back-button">
                <i class="fas fa-arrow-left"></i>
            </a>
            <h1 class="page-title">Fire</h1>
        </div>
    </header>

    <section class="section">
        <h2 class="section-title">Before</h2>
        
        <div class="action-item">
            <div class="icon-box"><i class="fas fa-fire-extinguisher"></i></div>
            <p class="action-text"><strong>Install fire extinguishers and smoke detectors</strong><br/>if possible.</p>
        </div>

        <div class="action-item">
            <div class="icon-box"><i class="fas fa-plug-circle-xmark"></i></div>
            <p class="action-text"><strong>Avoid illegal connections</strong><br/>and faulty wiring.</p>
        </div>

        <div class="action-item">
            <div class="icon-box"><i class="fas fa-box-open"></i></div>
            <p class="action-text"><strong>Keep flammable materials away</strong><br/>from stoves and heat sources.</p>
        </div>

        <div class="action-item">
            <div class="icon-box"><i class="fas fa-sign-hanging"></i></div>
            <p class="action-text"><strong>Know fire exits</strong><br/>and practice evacuation drills.</p>
        </div>
    </section>
    
    <hr />

    <section class="section">
        <h2 class="section-title">During</h2>
        
        <div class="action-item">
            <div class="icon-box"><i class="fas fa-person-arrow-down-to-line"></i></div>
            <p class="action-text"><strong>Stay low</strong><br/>to avoid smoke inhalation.</p>
        </div>

        <div class="action-item">
            <div class="icon-box"><i class="fas fa-running"></i></div>
            <p class="action-text"><strong>Evacuate quickly</strong><br/>do not return for belongings.</p>
        </div>

        <div class="action-item">
            <div class="icon-box"><i class="fas fa-stairs"></i></div>
            <p class="action-text"><strong>Use stairs, not elevators.</strong></p>
        </div>

        <div class="action-item">
            <div class="icon-box"><i class="fas fa-phone-alt"></i></div>
            <p class="action-text"><strong>Call 911 or QC Hotline 122</strong><br/>immediately.</p>
        </div>
    </section>

    <hr />

    <section class="section">
        <h2 class="section-title">After</h2>
        
        <div class="action-item">
            <div class="icon-box"><i class="fas fa-door-closed"></i></div>
            <p class="action-text"><strong>Do not re-enter</strong><br/>until declared safe by firefighters.</p>
        </div>

        <div class="action-item">
            <div class="icon-box"><i class="fas fa-fire-smoke"></i></div>
            <p class="action-text"><strong>Check for embers</strong><br/>that could restart the fire.</p>
        </div>

        <div class="action-item">
            <div class="icon-box"><i class="fas fa-hand-holding-medical"></i></div>
            <p class="action-text"><strong>Provide first aid</strong><br/>to burns and smoke inhalation.</p>
        </div>

        <div class="action-item">
            <div class="icon-box"><i class="fas fa-house-chimney-user"></i></div>
            <p class="action-text"><strong>Seek temporary shelter</strong><br/>and report damages for assistance.</p>
        </div>
    </section>
    
</div>