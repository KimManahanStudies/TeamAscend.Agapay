@using TeamAscend.Agapay.App.Components.Layout
@layout BaseLayout
@page "/EmergencyHotlines"

<div class="hotline-container">

    <!-- Back Button -->
    <a href="javascript:history.back()" class="Emer-back-button">
        <i class="fas fa-arrow-left"></i>
    </a>


    <!-- Header -->
    <header class="hotline-header">
        <h2>Emergency Hotlines</h2>

        <div class="segmented-control">
            <!-- Dropdown -->
            <select class="segment-dropdown" @onchange="@(e => ApplyFilterContacts(e.Value.ToString()))">
                <option value="All">All</option>
                <option value="Service / Agency">Service / Agency</option>
                <option value="District I">District I</option>
                <option value="District II">District II</option>
                <option value="District III">District III</option>
                <option value="District IV">District IV</option>
                <option value="District V">District V</option>
                <option value="District VI">District VI</option>
            </select>

            <!-- Favorites -->
            <button class="segment-favorites @(selectedFilter == "Favorites" ? "active" : "")" 
                    @onclick="@(() => ApplyFilterContacts("Favorites"))">
                ★ Favorites
            </button>
        </div>
    </header>

    <!-- Hotline List -->
    <div class="hotline-list">
        @foreach (var contact in filteredContacts)
        {
            <div class="hotline-item">
                <div class="hotline-info">
                    <h4>@contact.ContactName</h4>
                    <p class="contact-number">@contact.ContactNumber</p>
                    @if (!string.IsNullOrEmpty(contact.EmergencyHotline))
                    {
                        <p class="emergency-number">Emergency: @contact.EmergencyHotline</p>
                    }
                    @if (!string.IsNullOrEmpty(contact.Agency))
                    {
                        <p class="agency">@contact.Agency</p>
                    }
                    @if (!string.IsNullOrEmpty(contact.Location))
                    {
                        <p class="location">@contact.Location</p>
                    }
                    @if (!string.IsNullOrEmpty(contact.Barangay))
                    {
                        <div class="barangay-info">
                            <p>Barangay: @contact.Barangay</p>
                            @if (!string.IsNullOrEmpty(contact.BarangayCaptain))
                            {
                                <p>Captain: @contact.BarangayCaptain</p>
                            }
                        </div>
                    }
                </div>
                <div class="hotline-actions">
                    <div class="hotline-logo">
                        <img src="/images/qc-logo.png" alt="@contact.ContactName" />
                    </div>
                    <span class="favorite-star @(IsFavorite(contact.ID.ToString()) ? "active" : "")" 
                          @onclick="@(() => ToggleFavorite(contact.ID.ToString()))">
                        @(IsFavorite(contact.ID.ToString()) ? "★" : "☆")
                    </span>
                </div>
            </div>
        }
    </div>
</div>

