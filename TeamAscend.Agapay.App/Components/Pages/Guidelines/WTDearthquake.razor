@using TeamAscend.Agapay.App.Components.Layout
@layout BaseLayout
@page "/WTDearthquake"


<div class="safety-guide">

    <header class="header-earthquake">
        <div class="header-overlay">
            <a asp-action="Index" href="/" class="back-button">
                <i class="fas fa-arrow-left"></i>
            </a>
            <h1 class="page-title">Earthquake</h1>
        </div>
    </header>

    <section class="section">
        <h2 class="section-title">Before</h2>
        
        <div class="action-item">
            <div class="icon-box"><i class="fas fa-table-list"></i></div>
            <p class="action-text"><strong>Know safe spots</strong><br/>at home, school, or office (under sturdy tables, away from windows).</p>
        </div>

        <div class="action-item">
            <div class="icon-box"><i class="fas fa-briefcase-medical"></i></div>
            <p class="action-text"><strong>Prepare emergency supplies</strong><br/>and first-aid kit.</p>
        </div>

        <div class="action-item">
            <div class="icon-box"><i class="fas fa-handshake-angle"></i></div>
            <p class="action-text"><strong>Join earthquake drills</strong><br/>(conducted by barangay/QCDRRMO).</p>
        </div>

        <div class="action-item">
            <div class="icon-box"><i class="fas fa-screwdriver-wrench"></i></div>
            <p class="action-text"><strong>Secure heavy objects</strong><br/>and furniture.</p>
        </div>
    </section>
    
    <hr />

    <section class="section">
        <h2 class="section-title">During</h2>
        
        <div class="action-item">
            <div class="icon-box"><i class="fas fa-person-falling-burst"></i></div>
            <p class="action-text"><strong>Drop, Cover, Hold On</strong><br/>until shaking stops.</p>
        </div>

        <div class="action-item">
            <div class="icon-box"><i class="fas fa-arrows-split-up-and-down"></i></div>
            <p class="action-text"><strong>Stay indoors if inside</strong><br/>move to open space if outside.</p>
        </div>

        <div class="action-item">
            <div class="icon-box"><i class="fas fa-stairs"></i></div>
            <p class="action-text"><strong>Do not use elevators.</strong></p>
        </div>

        <div class="action-item">
            <div class="icon-box"><i class="fas fa-water"></i></div>
            <p class="action-text"><strong>If near shore, move to higher ground</strong><br/>(possible tsunami).</p>
        </div>
    </section>

    <hr />

    <section class="section">
        <h2 class="section-title">After</h2>
        
        <div class="action-item">
            <div class="icon-box"><i class="fas fa-house-crack"></i></div>
            <p class="action-text"><strong>Expect aftershocks</strong><br/>stay alert.</p>
        </div>

        <div class="action-item">
            <div class="icon-box"><i class="fas fa-user-doctor"></i></div>
            <p class="action-text"><strong>Check yourself and others</strong><br/>for injuries.</p>
        </div>

        <div class="action-item">
            <div class="icon-box"><i class="fas fa-house-chimney-user"></i></div>
            <p class="action-text"><strong>Inspect your home</strong><br/>for cracks, gas leaks, or fire hazards.</p>
        </div>

        <div class="action-item">
            <div class="icon-box"><i class="fas fa-volume-up"></i></div>
            <p class="action-text"><strong>Follow evacuation orders</strong><br/>from barangay or QCDRRMO.</p>
        </div>
    </section>
    
</div>