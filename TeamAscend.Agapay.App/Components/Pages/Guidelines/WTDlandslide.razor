@using TeamAscend.Agapay.App.Components.Layout
@layout BaseLayout
@page "/WTDlandslide"

<div class="safety-guide">

    <header class="header-landslide">
        <div class="header-overlay">
            <a asp-action="Index" href="/" class="back-button">
                <i class="fas fa-arrow-left"></i>
            </a>
            <h1 class="page-title">Landslide</h1>
        </div>
    </header>

    <section class="section">
        <h2 class="section-title">Before</h2>
        
        <div class="action-item">
            <div class="icon-box"><i class="fas fa-mountain-sun"></i></div>
            <p class="action-text"><strong>Be alert in hilly or slope areas</strong><br/>especially during heavy rain.</p>
        </div>

        <div class="action-item">
            <div class="icon-box"><i class="fas fa-route"></i></div>
            <p class="action-text"><strong>Know evacuation routes</strong><br/>and safe areas.</p>
        </div>

        <div class="action-item">
            <div class="icon-box"><i class="fas fa-slash"></i></div>
            <p class="action-text"><strong>Avoid construction or farming</strong><br/>on steep slopes.</p>
        </div>

        <div class="action-item">
            <div class="icon-box"><i class="fas fa-radio"></i></div>
            <p class="action-text"><strong>Listen to barangay announcements</strong><br/>and PAGASA rainfall warnings.</p>
        </div>
    </section>
    
    <hr />

    <section class="section">
        <h2 class="section-title">During</h2>
        
        <div class="action-item">
            <div class="icon-box"><i class="fas fa-up-right-and-down-left-from-center"></i></div>
            <p class="action-text"><strong>Move quickly to safer, higher ground</strong><br/>when cracks or unusual ground movement appear.</p>
        </div>

        <div class="action-item">
            <div class="icon-box"><i class="fas fa-water"></i></div>
            <p class="action-text"><strong>Stay away from rivers or streams</strong><br/>landslides may trigger flash floods.</p>
        </div>

        <div class="action-item">
            <div class="icon-box"><i class="fas fa-house-circle-xmark"></i></div>
            <p class="action-text"><strong>If indoors, evacuate immediately</strong><br/>when advised.</p>
        </div>
    </section>

    <hr />

    <section class="section">
        <h2 class="section-title">After</h2>
        
        <div class="action-item">
            <div class="icon-box"><i class="fas fa-person-falling-burst"></i></div>
            <p class="action-text"><strong>Stay away from the slide area</strong><br/>more landslides may occur.</p>
        </div>

        <div class="action-item">
            <div class="icon-box"><i class="fas fa-user-friends"></i></div>
            <p class="action-text"><strong>Check for injured or trapped neighbors.</strong></p>
        </div>

        <div class="action-item">
            <div class="icon-box"><i class="fas fa-triangle-exclamation"></i></div>
            <p class="action-text"><strong>Report damaged utilities</strong><br/>(water, gas, electricity) to authorities.</p>
        </div>

        <div class="action-item">
            <div class="icon-box"><i class="fas fa-door-closed"></i></div>
            <p class="action-text"><strong>Wait for clearance</strong><br/>before returning home.</p>
        </div>
    </section>
    
</div>