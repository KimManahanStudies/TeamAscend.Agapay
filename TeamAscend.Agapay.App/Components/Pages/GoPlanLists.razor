@page "/GoPlanLists"
@using TeamAscend.Agapay.Web.Models

<div class="goplan-container">
    <div class="header-goplan">
        <h1 class="title">Go Plan</h1>
        <button class="add-button">
            <span class="plus-icon-container">
                <i class="fas fa-plus"></i>
            </span>
            Add
        </button>
    </div>

    <div class="plan-list">
        <div class="plan-item">
            <span class="plan-name">Emergency Meeting Point: Home</span>
            <button class="options-button">
                <i class="fas fa-ellipsis-v"></i>
            </button>
        </div>
        <div class="plan-item">
            <span class="plan-name">Work Evacuation Plan</span>
            <button class="options-button">
                <i class="fas fa-ellipsis-v"></i>
            </button>
        </div>
        <div class="plan-item">
            <span class="plan-name">School Emergency Plan</span>
            <button class="options-button">
                <i class="fas fa-ellipsis-v"></i>
            </button>
        </div>
    </div>
</div>

<style>
    .goplan-container {
        background-color: white;
        padding: 1.5rem;
        font-family: 'Inter', system-ui, -apple-system, sans-serif;
    }

    .header-goplan {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
    }

    .title {
        font-size: 1.75rem;
        font-weight: bold;
        color: #003366;
        margin: 0;
    }

    .add-button {
        background-color: #003366;
        color: white;
        border: none;
        border-radius: 25px;
        padding: 0.5rem 1.25rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-weight: 500;
        cursor: pointer;
    }

    .plus-icon-container {
        background-color: #ffa500;
        color: white;
        width: 20px;
        height: 20px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.8rem;
    }

    .plan-list {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .plan-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem;
        border-bottom: 1px solid #eee;
        transition: background-color 0.2s ease;
    }

    .plan-item:hover {
        background-color: #f9f9f9;
    }

    .plan-name {
        font-weight: bold;
        color: #003366;
    }

    .options-button {
        background: none;
        border: none;
        color: #003366;
        font-size: 1rem;
        cursor: pointer;
        padding: 0.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 32px;
        height: 32px;
        border-radius: 50%;
        transition: background-color 0.2s ease;
    }

    .options-button:hover {
        background-color: #f5f5f5;
    }
</style>

@code {
    private List<GoPlan> Plans { get; set; } = new();
}