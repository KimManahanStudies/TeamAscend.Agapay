@page "/goplanlists"
@using TeamAscend.Agapay.Web.Models
<style>
    .ecard-holder{
        width: 96vw;
        position: relative;
        height: 32vh;
        margin-left: -40px;
        box-shadow: 0px 0px 5px #CCC;
    }

        .ecard-holder .ecard-number {
            color: #0a2d5a;
            font-size: 25px;
            position: absolute;
            z-index: 1;
            bottom: 110px;
            left: 25px;
            font-family: monospace;
            font-weight: bold;
        }

        .ecard-holder .ecard-name {
            color: #0a2d5a;
            font-size: 30px;
            position: absolute;
            z-index: 1;
            bottom: 80px;
            left: 25px;
            font-family: monospace;
            font-weight: bold;
        }

        .ecard-holder .ecard-address {
            color: #f9a825;
            font-size: 16px;
            position: absolute;
            z-index: 1;
            bottom: 15px;
            left: 25px;
            font-family: monospace;
            font-weight: bold;
        }

        .ecard-holder .ecard-bg {
            position: absolute;
            top: 0px;
            left: 0px;
            width: 100%;
        }
</style>
<div class="goplan-container">
    <div class="header-goplan">
        <h1 class="title">Go Plan</h1>
        <button class="add-button" @onclick="CreatePlan">
            <span class="plus-icon-container">
                <i class="fas fa-plus"></i>
            </span>
            Add
        </button>
    </div>

    <div class="ecard-holder" >
        <div class="ecard-number" >@eCardModel?.ShareCode</div>
        <div class="ecard-name" >@(Shell.CurrentUser.LastName + ", " + Shell.CurrentUser.FirstName) </div>
        <div class="ecard-address" >
            @Shell.CurrentUser.AddressLine1 <br />
            @Shell.CurrentUser.AddressLine2 <br />
            @Shell.CurrentUser.ContactNo1 <br />
        </div>
        <img class="ecard-bg" src="/imgs/e-card.png"  />
    </div>

    <div class="plan-list">
        @foreach (var plan in userPlans)
        {
            <div class="plan-item">
                <span class="plan-name">@plan.Name</span>
                <button class="options-button" @onclick="() => OpenOptionsSheet(plan, false)">
                    <i class="fas fa-ellipsis-v"></i>
                </button>
            </div>
        }
    </div>

    <!-- Shared Plans Section -->
    @if (sharedPlans != null && sharedPlans.Any())
    {
        <div class="shared-plans-section">
            <h2 class="shared-plans-title">Shared With You</h2>
            @foreach (var membership in sharedPlans)
            {
                var sharedPlan = DB.AppGoPlans?.FirstOrDefault(p => p.ID == membership.GoPlanID && !p.IsDeleted);
                @if (sharedPlan != null)
                {
                    <div class="plan-item shared-plan-item">
                        <div>
                            <span class="plan-name">@sharedPlan.Name</span>
                            <span class="plan-owner">by @(DB.Users?.FirstOrDefault(u => u.ID == sharedPlan.UserID)?.FirstName ?? "Unknown")</span>
                        </div>
                        <button class="options-button" @onclick="() => OpenOptionsSheet(sharedPlan, true)">
                            <i class="fas fa-ellipsis-v"></i>
                        </button>
                    </div>
                }
            }
        </div>
    }
</div>

<!-- Add Bottom Sheet -->
<div id="addSheet" class="bottom-sheet">
    <div class="sheet-content">
        <div class="sheet-handle"></div>
        <div class="sheet-section">
            <NavLink href="/createplan" class="create-btn" @onclick="() => CloseAddSheet()">
                <i class="fas fa-plus-circle"></i> Create Another GoPlan
            </NavLink>
        </div>
        <div class="sheet-section">
            <p class="import-label">Join a Family's GoPlan</p>
            <div class="import-input-wrapper">
                <input type="text" class="import-input" placeholder="Paste your shareable code here" @bind="shareCodeInput" @bind:event="oninput" />
                <button class="join-button" @onclick="JoinSharedPlan">
                    <i class="fas fa-check"></i>
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Options Bottom Sheet -->
<div id="optionsSheet" class="bottom-sheet">
    <div class="sheet-content">
        <div class="sheet-handle"></div>
        <p id="selectedPlanName" class="plan-title">@(selectedPlan?.Name ?? "")</p>
        <div class="sheet-option" @onclick="() => CopyShareCode(selectedPlan?.ShareCode)">
            <i class="fas fa-link"></i>
            <span>Copy Share Code</span>
        </div>
        @if (!isSharedPlan)
        {
            <div class="sheet-option" @onclick="() => NavigateToEdit(selectedPlan?.ID ?? 0)">
                <i class="fas fa-edit"></i>
                <span>Edit GoPlan</span>
            </div>
        }
        else
        {
            <div class="sheet-option" @onclick="() => NavigateToView(selectedPlan?.ID ?? 0)">
                <i class="fas fa-eye"></i>
                <span>View GoPlan</span>
            </div>
        }
        @if (!isSharedPlan)
        {
            <div class="sheet-option" @onclick="() => DeletePlan(selectedPlan?.ID ?? 0)">
                <i class="fas fa-trash"></i>
                <span>Delete</span>
            </div>
        }
    </div>
</div>

<script>
    function openAddSheet() {
        const sheet = document.getElementById('addSheet');
        const overlay = document.getElementById('overlay');
        sheet.classList.add('show');
        overlay.classList.add('show');
    }

    function closeAddSheet() {
        const sheet = document.getElementById('addSheet');
        const overlay = document.getElementById('overlay');
        sheet.classList.remove('show');
        overlay.classList.remove('show');
    }

    function openOptionsSheet() {
        const sheet = document.getElementById('optionsSheet');
        const overlay = document.getElementById('overlay');
        sheet.classList.add('show');
        overlay.classList.add('show');
    }

    function closeOptionsSheet() {
        const sheet = document.getElementById('optionsSheet');
        const overlay = document.getElementById('overlay');
        sheet.classList.remove('show');
        overlay.classList.remove('show');
    }
</script>

<!-- Overlay -->
<div id="overlay" class="overlay" @onclick="CloseAllSheets"></div>
