@using TeamAscend.Agapay.App.Components.Layout
@layout BaseLayout
@page "/ChangePassword"

<div class="change-password-page">
    <!-- Back Button -->
    <a href="/AccountSettings" class="ChangePassword_back-button">
        <i class="fas fa-chevron-left"></i>
    </a>

    <!-- Page Title -->
    <h3 class="settings-title">Change Password</h3>
</div>

<style>
    /* Back button style */
    .ChangePassword_back-button {
        position: absolute;
        top: 1rem;
        left: 1rem;
        background-color: #ffffff;
        border-radius: 50%;
        width: 42px;
        height: 42px;
        display: flex;
        justify-content: center;
        align-items: center;
        text-decoration: none;
        color: #003366; /* dark blue arrow */
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
        transition: all 0.2s ease-in-out;
        z-index: 10;
    }

        .ChangePassword_back-button:hover {
            background-color: #f1f4f8;
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.2);
        }

        .ChangePassword_back-button i {
            font-size: 1.2rem;
        }

    /* Page Title */
    .settings-title {
        text-align: center;
        font-weight: bold;
        color: #003366;
        margin-left: 2.8rem;
        margin-top: 1rem;
    }

</style>

