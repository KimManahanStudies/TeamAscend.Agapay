@page "/account"

<PageTitle>Account</PageTitle>

<div class="account-page">
    <!-- User Info (Clickable) -->
    
    @if (Shell.IsUserLoggedIn)
    {
        if (Model != null)
        {
            <div class="user-info d-flex align-items-center clickable">
                <img src="imgs/undraw_profile_3.svg" alt="Profile" class="profile-img" />
                <div class="user-details">
                    <h5>Hi, @GetFullName()</h5>
                    <p class="text-muted">@Model.ContactNo1</p>
                    <p class="text-muted">@Model.EmailAddress</p>
                </div>
            </div>
        }        
    }
    else
    {
        <div class="user-info d-flex align-items-center clickable">
            <img src="imgs/undraw_profile_3.svg" alt="Profile" class="profile-img" />
            <div class="user-details">
                <a href="/CreateAccount">Create Account</a>
                <a href="/SignIn">Sign In</a>
            </div>
        </div>
    }
    <!-- Menu List -->
    <div class="menu-list">
        @if (Shell.IsUserLoggedIn)
        {
            <NavLink href="/goplanlists" class="menu-item">
                <i class="fas fa-plus icon"></i>
                <span class="label">View Go Plan</span>
                <span class="arrow">›</span>
            </NavLink>
        }

        <NavLink href="/Faqs" class="menu-item">
            <i class="fas fa-question-circle icon"></i>
            <span class="label">FAQs</span>
            <span class="arrow">›</span>
        </NavLink>

        <NavLink href="/about" class="menu-item">
            <i class="fas fa-info-circle icon"></i>
            <span class="label">About Agapay</span>
            <span class="arrow">›</span>
        </NavLink>

        <NavLink href="/contactus" class="menu-item">
            <i class="fas fa-envelope icon"></i>
            <span class="label">Contact Us</span>
            <span class="arrow">›</span>
        </NavLink>

        <NavLink href="/rate" class="menu-item">
            <i class="fas fa-thumbs-up icon"></i>
            <span class="label">Rate our app</span>
            <span class="arrow">›</span>
        </NavLink>

        <NavLink href="/settings" class="menu-item">
            <i class="fas fa-cog icon"></i>
            <span class="label">Settings</span>
            <span class="arrow">›</span>
        </NavLink>
        @if (Shell.IsUserLoggedIn)
        {
            <div @onclick="HandleLogout" class="menu-item" style="cursor: pointer;">
                <i class="fas fa-sign-out-alt icon"></i>
                <span class="label">Log out</span>
                <span class="arrow">›</span>
            </div>
        }
    </div>
</div>

