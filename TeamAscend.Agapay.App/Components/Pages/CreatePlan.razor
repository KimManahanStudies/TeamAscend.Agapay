@page "/createplan"
@page "/createplan/{PlanId}"
@page "/createplan/{PlanId}/{ViewMode}"

<!-- Section 1: Header Background -->
<section class="header-section">
    <img src="imgs/goplanheader.png" alt="Family Planning" class="header-image" />
</section>

<!-- Section 2: Card Content -->
<section class="card-section">
    <div class="plan-card scrollable">
        <!-- Editable Go Plan Title -->
        <div class="section">
            <div class="GoPlan-title">
                @if (IsViewOnly)
                {
                    <p class="view-only-text">@Model?.Name</p>
                }
                else
                {
                    <input type="text" placeholder=" Emergency Plan" class="input-field" @bind="Model.Name" />
                }
            </div>
        </div>
        <hr class="divider"/>

        <!-- Meeting Point Section -->
        <div class="section">
            <div class="flex items-center">
                <div class="GoPlan-title">
                    <p class="label">Meeting Point</p>
                    @if (IsViewOnly)
                    {
                        <p class="view-only-text">@Model?.MeetingPointAddresss</p>
                    }
                    else
                    {
                        <input type="text" placeholder="Enter meeting point" class="input-field" @bind="Model.MeetingPointAddresss" />
                    }
                </div>
            </div>
        </div>
        <hr class="divider"/>

        <!-- Phone Number Section -->
        <div class="section">
            <div class="GoPlan-title">
                <p class="label">Phone Number</p>
                @if (IsViewOnly)
                {
                    <p class="view-only-text">+63 @Model?.PhoneNumber</p>
                }
                else
                {
                    <div class="phone-input">
                        <span class="prefix">+63</span>
                        <input type="text" 
                               maxlength="10" 
                               placeholder="Enter 10-digit number" 
                               class="input-field" 
                               @bind="Model.PhoneNumber" 
                               oninput="this.value=this.value.replace(/[^0-9]/g,'')" />
                    </div>
                }
            </div>
        </div>
        <hr class="divider"/>

        <!-- Family Role Section -->
        <div class="section">
            <div class="GoPlan-title">
                <p class="label">Family Role</p>

                @if (IsViewOnly)
                {
                    <p class="view-only-text">@Model?.FamilyMemberRole</p>
                }
                else
                {
                    <!-- Dropdown -->
                    <div class="dropdown-wrapper">
                        <select id="familyRole" class="dropdown" @bind="Model.FamilyMemberRole">
                            <option value="father">Father</option>
                            <option value="mother">Mother</option>
                            <option value="son">Son</option>
                            <option value="daughter">Daughter</option>
                            <option value="others">Others</option>
                        </select>
                        <span class="arrow">&#9662;</span>
                    </div>
                }
            </div>
        </div>
        <hr class="divider"/>

        <!-- Checklist Section -->
        <div class="section">
            <p class="checklist-header">72-Hour Go Bag Checklist</p>

            @foreach (var category in ChecklistCategories)
            {
                <h4 class="checklist-header">@category.Key</h4>
                <div class="checklist">
                    @foreach (var item in category.Value)
                    {
                        <label class="checklist-item">
                            @if (IsViewOnly)
                            {
                                <input type="checkbox" @bind="item.IsChecked" disabled />
                            }
                            else
                            {
                                <input type="checkbox" @bind="item.IsChecked" />
                            }
                            <span>@item.Description</span>
                        </label>
                    }
                </div>
            }
        </div>
        <hr class="divider"/>
    </div>
    <!-- Action Buttons -->
    @if (!IsViewOnly)
    {
        <div class="button-group">
            <button class="btn submit-btn" @onclick="SavePlan">Submit</button>
        </div>
    }
    <div class="button-group">
        <button class="btn cancel-btn" @onclick="GotoList">Cancel</button>
    </div>
</section>

<style>
    .view-only-text {
        font-size: 1rem;
        color: #333;
        padding: 0.75rem;
        background-color: #f5f5f5;
        border-radius: 6px;
        margin: 0;
    }
    

</style>
