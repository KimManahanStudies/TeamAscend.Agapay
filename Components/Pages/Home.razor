    function loadSlider(){
        $('#announcementPanel').html('');
        $('#announcementPanel').html($('#sliderSource').html());

        $('#announcementPanel .cycle-slideshow').attr('data-cycle-fx','scrollHorz');
        $('#announcementPanel .cycle-slideshow').attr('data-cycle-pause-on-hover','true');
        $('#announcementPanel .cycle-slideshow').attr('data-cycle-timeout','5000');
        $('#announcementPanel .cycle-slideshow').attr('data-cycle-slides','> div');
        $('#announcementPanel .cycle-slideshow').attr('data-cycle-swipe','true');
        $('#announcementPanel .cycle-slideshow').attr('data-cycle-swipe-fx','scrollHorz');
        $('#announcementPanel .cycle-slideshow').attr('data-cycle-pager','.sliderannouncement-pager');
    }
</script>