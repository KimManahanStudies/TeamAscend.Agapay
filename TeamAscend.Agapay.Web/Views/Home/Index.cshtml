@{
    Layout = "_FrontEndLayout";
    ViewData["Title"] = "Home";
}
<!-- Hero Section -->
<section class="hero container d-flex align-items-center justify-content-between" style="min-height:100vh;" id="tophome">
    <!-- Left Text -->
    <div class="hero-text col-md-6">
        <h2>
            AGAPAY: Always <span class="highlight">Ready</span>, <br />
            Always with <span class="highlight">You</span>
        </h2>
        <p>
            Bridging Quezon City residents and life-saving information. <br />
            Preparedness in just one tap.
        </p>
        <div class="download-btns mt-3">
            <a href="#"><img src="~/imgs/google.svg" alt="Google Play" class="store-btn" /></a>
            <a href="#"><img src="~/imgs/ios.svg" alt="App Store" class="store-btn" /></a>
        </div>
    </div>

    <div class="hero-image col-md-6 text-center position-relative">
        <!-- Phones -->
        <img src="~/imgs/mockup-a.png" alt="App Preview" class="phones img-fluid" />

        <!-- Girl -->
        <img src="~/imgs/model-a.png" alt="Girl holding phone" class="girl img-fluid" />
    </div>
</section>

<!-- Decorative circles -->
<img src="~/imgs/decoration-circle.png" alt="Decorative Curves" class="curves-first" />

<div class="container py-5 terms-page">
    <h1 class="fw-bold text-primary mb-4" style="text-align: center;">About Agapay PH</h1>
    <p style="text-align: center;">
        Agapay is a disaster preparedness app designed to strengthen community resilience, starting with Quezon City.
        By providing real-time alerts, customizable emergency plans, evacuation routes, and reliable updates from trusted
        agencies like PAGASA, PHIVOLCS, and NDRRMC, Agapay empowers families to stay informed and ready.
        With preparedness in just one tap, Agapay helps minimize confusion, improve response, and save lives.
    </p>
</div>
<section id="about" class="signup-section">
    <div class="container py-5 terms-page">
        <p>Sign up now</p>
        <h1 class="fw-bold text-primary mb-4" style="text-align: center;">Sign up in 3 simple steps</h1>
    </div>

    <div class="steps">
        <div class="step">
            <img src="imgs/download_app.png" alt="Download App" class="images-steps">
            <h3>Download the App</h3>
            <p>Install the Agapay App on your smartphone or tablet through the App Store or Google Play Store.</p>
        </div>
        <div class="step">
            <img src="imgs/sign_up.png" alt="Register Account" class="images-steps">
            <h3>Register an Account</h3>
            <p>Provide your mobile number and authenticate with a One-Time Pin.</p>
        </div>
        <div class="step">
            <img src="imgs/verified_account.png" alt="Verify Identity" class="images-steps">
            <h3>Verify your Identity</h3>
            <p>Enter your basic information and complete the facial recognition technology.</p>
        </div>
    </div>
</section>
<br/>
<br/>
<div class="container py-5 terms-page">
    <p style="text-align: center;">
        Our Key Features
    </p>
    <h1 class="fw-bold text-primary mb-0" style="text-align: center;">Stay Ready with Agapay:</h1>
    <h1 class="fw-bold text-primary" style="text-align: center; ">Preparedness made Simple, Anytime, Anywhere</h1>
    
</div>
<section id="features" class="hero container d-flex align-items-center justify-content-between" style="min-height:100vh;">
    <div class="mockup-image col-md-6 text-center position-relative">
        <!-- First Mockup -->
        <img src="~/imgs/mock-time.png" alt="App Preview" class="firstmockup mockup-image"/>
        <!-- Decorative circles -->
        <img src="~/imgs/decoration-circle.png" alt="Decorative Curves" class="curves-first"/>
    </div>
    <!-- First Mockup Description -->
    <div class="firstmockup-text col-md-6">
        <h2>
            Timely Disaster <span class="highlight">Alerts</span><br/>
        </h2>
        <p>
            Provides alerts and updates from trusted agencies such as PAGASA, NDRRMC, and QCDRRMO, including weather warnings, evacuation orders, and rescue updates.
        </p>
    </div>
</section>
<section class="hero container d-flex align-items-center justify-content-between" style="min-height:100vh;">
    <!-- Second Mockup Description -->
    <div class="secondmockup-text col-md-6">
        <h2>
            Resource <span class="highlight">Locator</span><br/>
        </h2>
        <p>
            Displays nearby designated evacuation sites and hospitals for quick reference.
            </p>
    </div>
    <div class="mockup-image col-md-6 text-center position-relative">
        <!-- Second Mockups -->
        <img src="~/imgs/mock-resource.png" alt="App Preview" class="secondmockup mockup-image"/>
    </div>
</section>
<section class="hero container d-flex align-items-center justify-content-between" style="min-height:70vh;">
    <div class="mockup-image col-md-6 text-center">
        <!-- Third Mockup -->
        <img src="~/imgs/mock-goplan.png" alt="App Preview" class="thirdmockup mockup-image"/>
    </div>
    <!-- Third Mockup Description -->
    <div class="thirdmockup-text col-md-6">
        <h2>
            Personal Emergency <span class="highlight">GoPlan</span><br/>
        </h2>
        <p>
            Allows users to create and save their own emergency plans within the app. 
        </p>
    </div>
</section>
<section class="hero container d-flex align-items-center justify-content-between" style="min-height:100vh;">
    <!-- Fourth Mockup Description -->
    <div class="fourthmockup-text col-md-6">
        <h2>
            First Aid & Survival <span class="highlight"><br/>Guides</span>
        </h2>
        <p>
            Provides basic first aid instructions to assist users in handling medical emergencies. 
        </p>
    </div>
    <div class="mockup-image col-md-6 text-center position-relative">
        <!-- Fourth Mockups -->
        <img src="~/imgs/mock-firstaid.png" alt="App Preview" class="fourthmockup mockup-image"/>
    </div>
</section>
<!-- ENDER Description -->
<section class="hero container d-flex align-items-center justify-content-between" style="min-height:100vh;">
    <div class="ender-text col-md-6">
        <h2>
            From Awareness to <span class="highlight">Action</span><br>
            Preparedness Made <span class="highlight">Simple</span>
        </h2>
        <p>
            As the Philippines embraces the power of digital innovation, we introduce <b>Agapay PH</b>:
            a disaster preparedness application dedicated to strengthening community resilience and safeguarding lives.
            Inspired by the urgent need for accessible, reliable, and inclusive disaster tools, Agapay brings together
            verified updates, emergency resources, and preparedness guides in one platform. Designed to support households,
            schools, and communities, it serves as a bridge between citizens and trusted agencies, ensuring that critical
            information reaches everyone when it matters most.
        </p>
        <p>
            With Agapay, preparedness today means safety tomorrow.
        </p>
    </div>
    <div class="mockup-image col-md-6 text-center position-relative">
        <!-- Fourth Mockups -->
        <img src="~/imgs/mock-ending.png" alt="App Preview" class="endingmockup mockup-image"/>
    </div>
</section>