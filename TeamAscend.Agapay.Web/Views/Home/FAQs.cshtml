@{
    Layout = "_FrontEndLayout";
    ViewData["Title"] = "FAQs";
}

<div class="container py-5 terms-page">
    <h1 class="fw-bold text-primary mb-4" id="tophome">Frequently Asked Questions</h1>

    <div class="accordion" id="faqAccordion">
        <!-- General Questions -->
        <div class="faq-section mb-4">
            <h2 class="fw-bold text-primary mb-3">General Questions</h2>

            <div class="accordion-item">
                <h3 class="accordion-header" id="general1">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse"
                            data-bs-target="#generalAnswer1" aria-expanded="true" aria-controls="generalAnswer1">
                        What is Agapay?
                    </button>
                </h3>
                <div id="generalAnswer1" class="accordion-collapse collapse show" aria-labelledby="general1"
                     data-bs-parent="#faqAccordion">
                    <div class="accordion-body">
                        Agapay is a disaster preparedness application designed to strengthen community resilience
                        in the Philippines, starting with Quezon City. The app provides real-time alerts,
                        customizable emergency plans, evacuation routes, and reliable updates from trusted agencies
                        like PAGASA, PHIVOLCS, and NDRRMC.
                    </div>
                </div>
            </div>

            <div class="accordion-item">
                <h3 class="accordion-header" id="general2">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                            data-bs-target="#generalAnswer2" aria-expanded="false" aria-controls="generalAnswer2">
                        Is Agapay free to use?
                    </button>
                </h3>
                <div id="generalAnswer2" class="accordion-collapse collapse" aria-labelledby="general2"
                     data-bs-parent="#faqAccordion">
                    <div class="accordion-body">
                        Yes, Agapay is completely free to use. Our mission is to make disaster preparedness
                        accessible to everyone in the community.
                    </div>
                </div>
            </div>
        </div>

        <!-- Account & Registration -->
        <div class="faq-section mb-4">
            <h2 class="fw-bold text-primary mb-3">Account & Registration</h2>

            <div class="accordion-item">
                <h3 class="accordion-header" id="account1">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                            data-bs-target="#accountAnswer1" aria-expanded="false" aria-controls="accountAnswer1">
                        How do I create an Agapay account?
                    </button>
                </h3>
                <div id="accountAnswer1" class="accordion-collapse collapse" aria-labelledby="account1"
                     data-bs-parent="#faqAccordion">
                    <div class="accordion-body">
                        Creating an account is simple:
                        <ol>
                            <li>Download the Agapay app from App Store or Google Play Store</li>
                            <li>Open the app and tap "Register"</li>
                            <li>Enter your mobile number and verify with OTP</li>
                            <li>Complete your profile with basic information</li>
                            <li>Verify your identity through facial recognition</li>
                        </ol>
                    </div>
                </div>
            </div>

            <div class="accordion-item">
                <h3 class="accordion-header" id="account2">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                            data-bs-target="#accountAnswer2" aria-expanded="false" aria-controls="accountAnswer2">
                        What information do I need to provide during registration?
                    </button>
                </h3>
                <div id="accountAnswer2" class="accordion-collapse collapse" aria-labelledby="account2"
                     data-bs-parent="#faqAccordion">
                    <div class="accordion-body">
                        During registration, you'll need to provide:
                        <ul>
                            <li>Full Name</li>
                            <li>Contact Number</li>
                            <li>Home Address</li>
                            <li>Emergency Contact Information</li>
                            <li>Optional: Medical Information for emergency purposes</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- Features & Usage -->
        <div class="faq-section mb-4">
            <h2 class="fw-bold text-primary mb-3">Features & Usage</h2>

            <div class="accordion-item">
                <h3 class="accordion-header" id="features1">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                            data-bs-target="#featuresAnswer1" aria-expanded="false" aria-controls="featuresAnswer1">
                        What are the main features of Agapay?
                    </button>
                </h3>
                <div id="featuresAnswer1" class="accordion-collapse collapse" aria-labelledby="features1"
                     data-bs-parent="#faqAccordion">
                    <div class="accordion-body">
                        Agapay's main features include:
                        <ul>
                            <li>Real-time disaster alerts and notifications</li>
                            <li>Personal Emergency GoPlan creation</li>
                            <li>Resource Locator for emergency facilities</li>
                            <li>First Aid & Survival Guides</li>
                            <li>Emergency contact management</li>
                            <li>Evacuation route planning</li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="accordion-item">
                <h3 class="accordion-header" id="features2">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                            data-bs-target="#featuresAnswer2" aria-expanded="false" aria-controls="featuresAnswer2">
                        How do I create an emergency plan?
                    </button>
                </h3>
                <div id="featuresAnswer2" class="accordion-collapse collapse" aria-labelledby="features2"
                     data-bs-parent="#faqAccordion">
                    <div class="accordion-body">
                        To create an emergency plan:
                        <ol>
                            <li>Go to the GoPlan section in the app</li>
                            <li>Tap "Create New Plan"</li>
                            <li>Add household members and emergency contacts</li>
                            <li>Set evacuation routes and meeting points</li>
                            <li>Review and save your plan</li>
                            <li>Share with family members if desired</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>

        <!-- Privacy & Security -->
        <div class="faq-section mb-4">
            <h2 class="fw-bold text-primary mb-3">Privacy & Security</h2>

            <div class="accordion-item">
                <h3 class="accordion-header" id="privacy1">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                            data-bs-target="#privacyAnswer1" aria-expanded="false" aria-controls="privacyAnswer1">
                        How is my personal information protected?
                    </button>
                </h3>
                <div id="privacyAnswer1" class="accordion-collapse collapse" aria-labelledby="privacy1"
                     data-bs-parent="#faqAccordion">
                    <div class="accordion-body">
                        We take your privacy seriously and protect your data through:
                        <ul>
                            <li>Compliance with the Data Privacy Act of 2012 (RA 10173)</li>
                            <li>Secure encryption of personal information</li>
                            <li>Strict access controls and authentication</li>
                            <li>Regular security audits and updates</li>
                            <li>Data sharing only with authorized agencies during emergencies</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Scroll to Top Button -->
<button id="scrollToTopBtn" class="scroll-to-top-btn">
    <i class="fas fa-arrow-up"></i>
</button>


<style>
    .accordion-button:not(.collapsed) {
        background-color: #f8f9fa;
        color: #f6a623;
    }

    .accordion-button:focus {
        box-shadow: none;
        border-color: rgba(0,0,0,.125);
    }

    .accordion-item {
        margin-bottom: 0.5rem;
        border-radius: 0.25rem;
    }

    .accordion-button {
        font-weight: 500;
    }

    .faq-section {
        background-color: #ffffff;
        padding: 1.5rem;
        border-radius: 0.5rem;
    }
    
     .nowrap {
         white-space: nowrap;
     }
    .scroll-to-top-btn {
        position: fixed;
        bottom: 20px;
        right: 20px;
        width: 40px;
        height: 40px;
        background-color: #f6a623;
        color: white;
        border: none;
        border-radius: 50%;
        cursor: pointer;
        display: none;
        transition: all 0.3s ease;
        z-index: 1000;
    }

    .scroll-to-top-btn:hover {
        background-color: #f6a623;
        transform: translateY(-3px);
    }
</style>

<!-- Make sure you have this JS in your layout or at the bottom of the page -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const scrollToTopBtn = document.getElementById('scrollToTopBtn');

        // Show/hide button based on scroll position
        window.addEventListener('scroll', function() {
            if (window.scrollY > 300) {
                scrollToTopBtn.style.display = 'block';
            } else {
                scrollToTopBtn.style.display = 'none';
            }
        });

        // Scroll to top when button is clicked
        scrollToTopBtn.addEventListener('click', function() {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        });
    });
</script>


