@using TeamAscend.Agapay.Web.Models
@model PhonebookPageVM
@{
    Layout = "_BackEndLayout";
    ViewData["Title"] = "Phonebook";
}

@section Header
{
    <link href="/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
}

<form id="frmDetails" method="post" action="~/ContactCenter/SaveContact" autocomplete="off">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Phonebook</h1>
        <button class="btn btn-primary btn-icon-split shadow" type="button" id="btnNewContact">
            <span class="icon text-white-50">
                <i class="fas fa-plus"></i>
            </span>
            <span class="text">New Contact</span>            
        </button>
    </div>

    <!-- DataTales Example -->
    <div class="card shadow" style="padding:10px">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th style="width:25vw">Contact Name</th>
                        <th>Contact Number</th>
                        <th>Barangay</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var contact in Model.Contacts)                
                    {
                        <tr>
                            <td>@contact.ID</td>
                            <td>@contact.DisplayName</td>
                            <td>@contact.DisplayNumber</td>
                            <td>@contact.Barangay</td>
                            <td>
                                <a href="#" class="text-success" title="Edit" onclick="EditContact(@contact.ID)">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="#" class="text-danger" title="Delete" onclick="DeleteContact(@contact.ID)">
                                    <i class="fa fa-times"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="modal fade right" id="contactModal" tabindex="-1" role="dialog" aria-labelledby="contactModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="contactModalLabel">Contact Details</h5>
                    <span style="float:right">
                        <button class="btn btn-primary" type="submit">Save</button>
                        <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    </span>                    
                </div>
                <div class="modal-body">
                    <input type="hidden" id="ID" name="ID" />
                    
                    <div class="row gx-3 mb-3">
                        <div class="col-md-12">
                            <label class="small mb-1" for="ContactName">Contact Name</label>
                            <input class="form-control" id="ContactName" name="ContactName" type="text" placeholder="Enter contact name" required/>
                        </div>
                    </div>
                    <div class="row gx-3 mb-3">
                        <div class="col-md-12">
                            <label class="small mb-1" for="ContactNumber">Contact Number</label>
                            <input class="form-control" id="ContactNumber" name="ContactNumber" type="tel" placeholder="Enter contact number" required/>
                        </div>
                    </div>
                    <div class="row gx-3 mb-3">
                        <div class="col-md-12">
                            <label class="small mb-1" for="EmergencyHotline">Emergency Hotline</label>
                            <input class="form-control" id="EmergencyHotline" name="EmergencyHotline" type="tel" placeholder="Enter emergency hotline"/>
                        </div>
                    </div>
                    <div class="row gx-3 mb-3">
                        <div class="col-md-12">
                            <label class="small mb-1" for="Agency">Agency</label>
                            <input class="form-control" id="Agency" name="Agency" type="text" placeholder="Enter agency name"/>
                        </div>
                    </div>
                    <div class="row gx-3 mb-3">
                        <div class="col-md-12">
                            <label class="small mb-1" for="Location">Location</label>
                            <input class="form-control" id="Location" name="Location" type="text" placeholder="Enter location"/>
                        </div>
                    </div>
                    <div class="row gx-3 mb-3">
                        <div class="col-md-6">
                            <label class="small mb-1" for="District">District</label>
                            <input class="form-control" id="District" name="District" type="text" placeholder="Enter district"/>
                        </div>
                        <div class="col-md-6">
                            <label class="small mb-1" for="Barangay">Barangay</label>
                            <input class="form-control" id="Barangay" name="Barangay" type="text" placeholder="Enter barangay"/>
                        </div>
                    </div>
                    <div class="row gx-3 mb-3">
                        <div class="col-md-12">
                            <label class="small mb-1" for="BarangayCaptain">Barangay Captain</label>
                            <input class="form-control" id="BarangayCaptain" name="BarangayCaptain" type="text" placeholder="Enter barangay captain name"/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        function NewContact(){
            $('#ID').val(0);
            $('#frmDetails').trigger('reset');
            $('#contactModal').modal('show')
        }

        function EditContact(contactId){
            $.ajax({
                url: '/ContactCenter/GetContact?ID=' + contactId,
                method: 'GET',
                success: function (res) {
                    for (let key of Object.keys(res)) {
                        $('#' + key).val(res[key]);
                    }
                    $('#contactModal').modal('show');
                },
                error: function (err) {
                    alert('Error Getting Data!');
                },
            });
        }

        function DeleteContact(contactId){
            if(confirm('Do you want to delete this contact?')){
                $.ajax({
                    url: '/ContactCenter/DeleteContact?ID=' + contactId,
                    method: 'GET',
                    success: function (res) {
                        if(res == 1){
                            alert('Contact deleted successfully!');
                            window.location.reload();
                        }                    
                    },
                    error: function (err) {
                        alert('Error deleting contact!');
                    },
                });
            }
        }

        $(document).ready(function() {
            $('#dataTable').DataTable();

            $('#frmDetails').validate({
                submitHandler: function(form) {
                    IsBusy(true,'Processing...');
                    form.submit();
                }
            });

            $('#btnNewContact').on('click', function(){
                NewContact();
            });
        });
    </script>
}