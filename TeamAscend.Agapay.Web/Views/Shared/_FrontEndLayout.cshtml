<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>@ViewData["Title"] - Agapay</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="/imgs/favicon.ico" />
    <!-- Custom Google font-->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@100;200;300;400;500;600;700;800;900&amp;display=swap" rel="stylesheet" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="/css/animate_v4.min.css" rel="stylesheet" />
    <link href="/css/fontawesome-all.css" rel="stylesheet" />
    <link href="/css/styles.css" rel="stylesheet" />
    <link href="/css/front-end-style.css" rel="stylesheet" />
</head>
<body class="d-flex flex-column h-100">
<main class="flex-shrink-0">
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-light bg-white py-3">
        <div class="container px-5">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <img src="~/imgs/Agapay_Logo_2.png" alt="Agapay Logo" class="agapay-logo-nav" />
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0 small fw-bolder">
                    <li class="nav-item">
                        <a class="nav-link" href="/#home">
                            &nbsp; Home
                        </a>
                    </li>
                    @* <li><i class="fa fa-verti"></i></li> *@
                    <li class="nav-item">
                        <a class="nav-link" href="/#about">
                            &nbsp; About
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/#features">
                            &nbsp; Features
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/Dashboard">
                            &nbsp; Login
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    @RenderBody()
</main>


<footer class="footer">
    <div class="container py-5">
        <div class="row align-items-center justify-content-between">
            <div class="col-md-auto text-center text-md-start mb-3 mb-md-0 d-flex flex-column align-items-center">
                <img src="~/imgs/Agapay_Logo_2.png" alt="Agapay Logo" class="agapay-logo mb-3">
                <p class="mb-0 small agapay-copyright">Copyright © 2025<br>All Rights Reserved</p>
            </div>

            <div class="col-md-auto text-center text-md-start mb-3 mb-md-0">
                <h6 class="fw-bold text-white">ABOUT US</h6>
                <ul class="list-unstyled">
                    <li><a href="/Pages/AboutAgapayPh" class="footer-link">About Agapay PH</a></li>
                    <li><a href="/Pages/TermsAndConditions" class="footer-link">Terms and Conditions</a></li>
                    <li><a href="/Pages/PrivacyPolicy" class="footer-link">Privacy Policy</a></li>
                    <li><a href="/faqs" class="footer-link">FAQs</a></li>
                </ul>
            </div>
            <div class="col-md-auto text-center text-md-start">
                <img src="~/imgs/STI.png" alt="STI Logo" class="sti-logo">
            </div>
        </div>
    </div>
</footer>
</body>
</html>
